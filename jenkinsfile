pipeline {
     agent any 
    stages {

        stage('Prepare') {
            steps {
              git branch: 'main', credentialsId: 'github_auth', url: 'https://github.com/IsraaElsayed/finalproject-2.git'      
              sh "echo cloning sucessfully"
            }
            }
            
        
         stage('build') {
            steps {
                // Get some code from a GitHub repository
                sh "docker build -t IsraaElsayed/app:v1 ."
            }
            
            
          
        }
        // deploy in ubuntu agent 
         stage('Deploy') {
            steps {
                // Get some code from a GitHub repository
                sh "docker run -d -p 80:80 IsraaElsayed/app:v1"
            }
        } 
    }
}          